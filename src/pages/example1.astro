---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <a href="/">HOME</a>
  <div class="cube-wrap">
    <div class="cube">
      <div class="face front">
        <p>This is a cube face with text.</p>
      </div>
      <div class="face back"></div>
      <!-- <div class="face left"></div> -->
      <!-- <div class="face right"></div> -->
      <!-- <div class="face top"></div> -->
      <!-- <div class="face bottom"></div> -->
    </div>
  </div>
</Layout>

<style>
  .cube {
    position: relative; /* Positioning context for faces */
    width: 100px; /* Width of the cube */
    height: 100px; /* Height of the cube */
    transform-style: preserve-3d; /* Enable 3D transformations */
    transform: rotateX(7deg) rotateY(7deg); /* Slight rotation for 3D effect */
  }

  .face {
    position: absolute; /* Position each face absolutely */
    width: 100px; /* Width of each face */
    height: 100px; /* Height of each face */
    background-color: rgb(65, 130, 148); /* Color of the cube faces */

    display: flex; /* Center text */
    align-items: center; /* Center text vertically */
    justify-content: center; /* Center text horizontally */
    color: white; /* Text color */
    font-size: 14px; /* Text size */
  }

  .front {
    transform: translateZ(100px); /* Move front face out */
    border: solid black 4px;
  }
  .back {
    transform: rotateY(180deg) translateZ(50px); /* Move back face out */
    background-color: rgb(121, 120, 124);
  }
  .left {
    transform: rotateY(-90deg) translateZ(50px); /* Move left face out */
    background-color: rgb(107, 118, 90);
  }
  .right {
    transform: rotateY(90deg) translateZ(50px); /* Move right face out */
  }
  .top {
    transform: rotateX(90deg) translateZ(50px); /* Move top face out */
  }
  .bottom {
    transform: rotateX(-90deg) translateZ(50px); /* Move bottom face out */
    background-color: rgb(110, 135, 153);
  }

  p {
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    margin-left: 10px;
  }

  .cube-wrap {
    margin-left: 50px;
    margin-top: 50px;
  }
</style>

